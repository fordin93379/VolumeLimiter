<Window x:Class="VolumeLimiter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolumeLimiter"
        mc:Ignorable="d"
        Title="VolumeLimiter" Height="70" Width="200">
    <Grid x:Name="main" Background="Coral">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Background="Coral" FontSize="20px" HorizontalAlignment="Center" Content="Volume limiter"/>
        <Slider x:Name="Slider" Grid.Row="1" ValueChanged="Slider_ValueChanged"  Thumb.DragCompleted="slider_DragCompleted"/>
    </Grid>
</Window>
